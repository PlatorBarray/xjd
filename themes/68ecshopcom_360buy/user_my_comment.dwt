function del_tag_one(rec_id,n)
{
	var s=document.getElementById('tags_zi_'+rec_id);
	var lis=s.getElementsByTagName("li");
	for (var i=0;i<lis.length;i++)
	{
		if (i==n)
		{
			s.removeChild(lis[i]);
		}
	}
}
function hide_add_tags(rec_id)
